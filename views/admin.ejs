<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <script src="https://kit.fontawesome.com/70c8b72f77.js" crossorigin="anonymous"></script>
    <link rel="icon" href="images/favicon.ico">
    <link href="css/basic.css" rel="stylesheet" type="text/css" />
    <title>Profile</title>

    <style>
        @import url("https://fonts.googleapis.com/css2?family=Sora:wght@500&display=swap");
        

    body {
        background-color: black;
        font-family: 'Roboto', sans-serif;
    }

    .container1 {
    margin: 75px;
    padding: 100px;
    }

 


    </style>
</head>

<html>
    <body style="background-color: rgb(41, 43, 50);">

            <%- include("_admin_navigation_bar") %>

                           
        <section class="bg-dark text-light p-5 pt-lg-5 p-lg-5 text-center text-sm-start" style="background-image: url(/images/ssbbanner4.png); background-repeat: no-repeat;
                  position: relative; background-position: center; background-size: cover">
            <div class="container py-5">
                <div class="d-sm-flex align-items-center justify-content-center">
                    <div>
                        <h1
                            style=" text-shadow : 10px 10px 20px black,  0 0 10px #167c9c;font-size: 50px;">
                            <span style="font-weight: bold; color: white; font-size: 80px; ">Admin</span> </h1>
                    </div>
                </div>
            </div>
        </section>

        <section>
            <div class="container1 px-4">
              <div class="row gap-4 text-center">
                <!-- Users Box -->
                
                <div class="col-md p-sm-1">
                  <form class="form-box needs-validation" action="/admin/addadmin" method="POST">
                  <div class="card bg-dark text-light h-100 py-5">
                    <div class="card-body text-center">
                      <div class="h1 mb-3">
                        <i class="bi bi-people-fill"></i>
                      </div>
                      <h3 class="card-title mb-3" style="font-weight: bold;">Users</h3>

                      <select class="form-select" name="user" id="user" style="background-color: rgb(199, 199, 199); border-radius: 0 .25rem .25rem 0;" aria-describedby="inputGroupPrepend" required>
                        <option disabled selected>Non-Admin Users </option>
                        <% if(users.length!=0) { var i=1; users.forEach(function(data) { if(data.member_role == 1){ %>
                          <option value=<%=data.member_username%>> <%=data.member_username%></option>

                        <% }i++; })} %>
                    </select>
                      <button style="margin: 15px;" type="submit" class="btn btn-blue text-center fs-5 border-dark"> 
                        Grant Admin Role
                      </button>
                    </div>
                  </div>
                </form>
                </div>
              

                <!-- Admin Box -->
                
                <div class="col-md p-sm-1">
                  <form class="form-box needs-validation" action="/admin/remove" method="POST">
                  <div class="card bg-dark text-light h-100 py-5">
                    <div class="card-body text-center">
                      <div class="h1 mb-3">
                        <i class="bi bi-people-fill"></i>
                      </div>
                      <h3 class="card-title mb-3" style="font-weight: bold;">Admin</h3>
                        <select class="form-select" name="admin" id="admin" style="background-color: rgb(199, 199, 199); border-radius: 0 .25rem .25rem 0;" aria-describedby="inputGroupPrepend" required>
                          <option disabled selected>Admin Users </option>
                          <% if(users.length!=0) { var i=1; users.forEach(function(data) { if(data.member_role == 0){ %>
                            <option value=<%=data.member_username%>> <%=data.member_username%></option>

                          <% }i++; })} %>
                        </select>
                        <button  style="margin: 15px;" type="submit" class="btn btn-blue text-center fs-5 border-dark">
                        Remove Admin Role
                        </button>
                    </div>
                  </div>
                </form>
                </div>
              
              </div>
            </div>
          </section>
                    
        <!-- Copyright Footer -->
        <footer class="pb-2 pt-5 bg-dark text-white text-center position-relative">
            <div class="container">
                <p>&copy; <span id="displayDate"></span> <a href="/"
                        style="color: white;">TournaSmash</a></p>
                <a href="#" class="position-absolute bottom-0 end-0 p-4">
                    <i class="bi bi-arrow-up-circle h1"></i></a>
            </div>
        </footer>

        <!-- Footer date JS -->
        <script type="text/javascript">
            var newDate = new Date();
            // Insert it via javascript
            document.getElementById('displayDate').innerHTML = newDate.getFullYear();
        </script>

        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
        <script
            src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    </body>
    
    </html>