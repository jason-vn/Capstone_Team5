<!DOCTYPE html>
<html lang="en">

<head>
    <title>User Login</title>
    <link rel="icon" href="images/login.ico">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />
    <script src="https://kit.fontawesome.com/70c8b72f77.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/basic.css">

    <style>
        @import url("https://fonts.googleapis.com/css2?family=Sora:wght@500&display=swap");
    </style>
</head>


<body style="background-color: rgb(41, 43, 50);">
    <% if(!ID) { %>
        <%- include("_navigation_bar") %>
    <% } else if ( role === 0) {  %>
        <%- include("_admin_navigation_bar") %>
    <% } else { %>
        <%- include("_user_navigation_bar") %>
    <% } %>

    <!-- Start of login content -->
    <div class="container">

        <!-- Start of login form card -->
        <div class="container-fluid pt-5">
            <div class="row d-flex justify-content-center align-items-center align-items-baseline min-vh-100">
                <div class="col">
                    <div class="card" style="background-color: rgb(33, 35, 38); border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col d-none d-md-block">
                                <img src="images/resetimg.jpg" alt="reset form"
                                    style="height: 100%; width: 100%; border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col col-md-12 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <!-- Start of form element -->
                                    <form class="form-box needs-validation" action="/login/resetpasswordemail" method="POST">

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <img src="images/captfalconhead.png" height="50px">
                                            <span class="h1 text-light fw-bold mb-0">TournaSmash</span>
                                        </div>

                                        <h5 class="fw-normal mb-3"
                                            style="color: rgb(177, 173, 173); font-style: oblique; letter-spacing: 1px;">
                                            Enter Account Email</h5>

                                          <!-- Email line -->
                                          <div class="col-12 px-1 mt-4">
                                            <div class="input-group has-validation">
                                                <span class="input-group-text" id="inputGroupPrepend">@</span>
                                                <input type="email" class="form-control" id="email" name="email" placeholder="your@email.com" style="background-color: rgb(199, 199, 199); border-radius: 0 .25rem .25rem 0;" aria-describedby="inputGroupPrepend" required>
                                                <div class="valid-feedback">
                                                    Looks good!
                                                </div>
                                                <div class="invalid-feedback">
                                                    Please provide an email address.
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Submit button -->
                                        <div class="form-row pt-4">
                                            <div class="col text-center">
                                                <button type="submit" class="btn btn-blue text-center fs-5 border-dark">
                                                    Submit
                                                </button>
                                            </div>
                                        </div>



                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Copyright Footer -->
    <footer class="pb-2 pt-5 bg-dark text-white text-center position-relative">
        <div class="container">
            <p>&copy; <span id="displayDate"></span> <a href="/" style="color: white;">TournaSmash</a></p>
            <a href="#" class="position-absolute bottom-0 end-0 p-4">
                <i class="bi bi-arrow-up-circle h1"></i></a>
        </div>
    </footer>

    <!-- Disabling form submissions if there are invalid fields -->
    <script>
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>

    <script type="text/javascript">
        var newDate = new Date();
        // Insert it via javascript
        document.getElementById('displayDate').innerHTML = newDate.getFullYear();
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>