<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/basic.css">
  <link rel="icon" href="/images/favicon.ico" />
  <script src="https://kit.fontawesome.com/70c8b72f77.js" crossorigin="anonymous"></script>
  <title>New Tournament</title>

  <style>
    @import url("https://fonts.googleapis.com/css2?family=Sora:wght@500&display=swap");
  </style>
</head>



<body style="background-color: rgb(41, 43, 50);">

  <% if(!ID) { %>
  <%- include("_navigation_bar") %>
  <% } else if ( role === 0) {  %>
  <%- include("_admin_navigation_bar") %>
  <% } else { %>
  <%- include("_user_navigation_bar") %>
  <% } %>

  <section class="bg-dark text-light p-5 pt-lg-5 p-lg-5 text-center text-sm-start" style="background-image: url('../images/ssbbanner4.png'); background-repeat: no-repeat; min-width: 100%; min-height: 100%; width: auto; height: auto; background-size: cover;">
    <div class="container py-5">
      <div class="d-sm-flex align-items-center justify-content-center">
        <div>
          <h1 style="text-shadow : 10px 10px 20px black,  0 0 10px #167c9c;font-size: 50px;">
            <span style="font-weight: bold; color: white; font-size: 80px; ">New
              Tournament</span>
          </h1>
        </div>
      </div>
    </div>
  </section>

  <!-- Container Start -->
  <div class="container text-light pb-5">
    <div class="row align-items-center justify-content-center min-vh-100">
      <div class="col-xl-10 col-l-8 card" style="background-color: rgb(33, 35, 38);">

        <div class="card-body">

          <!-- Form Start -->
          <h1 class="title text-center mt-4" style="font-weight:bold;">New Tournament
          </h1>
          <form class="form-box px-3 needs-validation" action="/tournaments/create" method="POST">

            <!-- Tournament Name -->
            <div class="col mt-4">
              <h5 class="pt-3 pb-2">Tournament Name</h5>
              <div class="input-group has-validation">
                <span class="input-group-text" id="inputGroupPrepend"><i class="fas fa-signature"></i></span>
                <input type="text" class="form-control" name="tname" id="tname" placeholder="Tournament Name" style="background-color: rgb(199, 199, 199);" aria-describedby="inputGroupPrepend" required>
                <div class="invalid-feedback">
                  Please provide a tournament name.
                </div>
              </div>
            </div>

            <!-- Format -->
            <h5 class="pt-3 pb-2">Format</h5>
            <div class="col-12 mt-4">
              <div class="input-group has-validation">
                <span class="input-group-text" id="inputGroupPrepend">
                  <i class="fas fa-list"></i></span>
                <select class="form-select" name="format" id="format" style="background-color: rgb(199, 199, 199); border-radius: 0 .25rem .25rem 0;" required>
                  <option disabled selected>Choose format</option>
                  <option value="single elimination">Single Elimination
                  </option>
                  <option value="double elimination">Double Elimination
                  </option>
                  <option value="round robin">Round Robin</option>
                  <option value="swiss">Swiss</option>
                </select>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  Please choose a format.
                </div>
              </div>
            </div>

            <!-- Start Date -->
            <h5 class="pt-4">Tournament Start Date and Time</h5>
            <div class="row">
              <div class="col mt-3 pb-4">
                <div class="input-group date has-validation" id="datetimepicker">
                  <span class="input-group-text" id="inputGroupPrepend"><i class="fas fa-calendar-check"></i></span>
                  <input type="date" name="startdate" id="startdate" class="form-control" style="background-color: rgb(199, 199, 199);" aria-describedby="inputGroupPrepend" required>
                  <div class="invalid-feedback">
                    Please provide a tournament date.
                  </div>
                </div>
              </div>

              <!-- Start Time -->
              <div class="col mt-3 pb-4">
                <div class="input-group has-validation">
                  <span class="input-group-text" id="inputGroupPrepend"><i class="fas fa-clock"></i></span>
                  <input type="time" name="starttime" id="starttime" class="form-control" style="background-color: rgb(199, 199, 199);" aria-describedby="inputGroupPrepend" required>
                  <div class="invalid-feedback">
                    Please provide a tournament time.
                  </div>
                </div>
              </div>
            </div>

            <!-- Get timezone -->
            <input hidden name="timezone" id="timezone">
            <script>
              const timezone = Intl.DateTimeFormat().resolvedOptions().timeZone
              const el = document.getElementById('timezone')
              el.setAttribute('value', timezone)
            </script>

            <!-- Check-In Duration -->
            <div class="row">
              <h5 class="pt-3 pb-2">Check-In Time</h5>
              <div class="col-12 pb-4">
                <div class="input-group has-validation">
                  <span class="input-group-text" id="inputGroupPrepend">
                    <i class="fas fa-list"></i></span>
                  <select class="form-select" name="checkin" id="checkin" style="background-color: rgb(199, 199, 199); border-radius: 0 .25rem .25rem 0;" required>
                    <option selected>Do not require check-in
                    </option>
                    <option value="15">15 minutes</option>
                    <option value="30">30 minutes</option>
                    <option value="60">1 hour</option>
                    <option value="120">2 hours</option>
                    <option value="360">6 hours</option>
                    <option value="1440">1 day</option>
                    <option value="2880">2 days</option>
                  </select>
                  </select>
                  </select>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please choose a check-in window.
                  </div>
                </div>
              </div>
            </div>

            <div class="col py-3 text-center">
              <button class="btn btn-blue" type="submit">Submit</button>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>


  <!-- Copyright Footer -->
  <footer class="pb-3 pt-4 bg-dark text-white text-center text-muted position-relative">
    <div class="container">
      <p>&copy; <span id="displayDate"></span> <a href="/" style="color: white;">TournaSmash</a></p>
      <a href="#" class="position-absolute bottom-0 end-0 p-4 pt-5">
        <i class="bi bi-arrow-up-circle h1"></i></a>
    </div>
  </footer>

  <script type="text/javascript">
    var newDate = new Date();
    // Insert it via javascript
    document.getElementById('displayDate').innerHTML = newDate.getFullYear();
  </script>


  <!-- Start Date JS -->
  <script type="text/javascript">
    $(function() {
      $('#datetimepicker').datetimepicker({
        format: 'LT'
      });
    });
  </script>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>

</html>