  <!-- Showcase -->
  <section class="bg-dark text-light p-5 pt-lg-5 p-lg-5 text-center text-sm-start" style="background-image: url(images/ssbbanner4.png); background-repeat: no-repeat; min-width: 100%; min-height: 100%; background-size: cover;">
    <div class="container">
      <div class="d-sm-flex align-items-center justify-content-left">
        <div>
          <h1 class="fw-bold" style="text-shadow : 2px 3px black; font-size: 50px;">
            <span class="fw-bolder">TournaSmash</span> Tournament Manager
          </h1>
          <p class="lead my-3" style="font-size: 25px; text-shadow : 3px 2px black;">Compete in or
            create Super Smash Bros. Ultimate tournaments from your PC or mobile device!
          </p>
          <a href="/register"><button class="btn btn-blue btn-outline-dark btn-lg border-dark" data-bs-toggle="modal" data-bs-target="#register">Get
              started</button></a>

        </div>
      </div>
    </div>
  </section>

  <p style="page-break-after: always;">&nbsp;</p>
  <p style="page-break-before: always;">&nbsp;</p>

  <!-- Boxes -->
